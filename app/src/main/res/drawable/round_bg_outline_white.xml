<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="@color/colorAccent" />
                    <corners android:radius="@dimen/spacing_middle" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="@color/colorAccent" />
                    <solid android:color="@color/grey_500" />
                    <corners android:radius="@dimen/spacing_middle" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="@color/blue_grey_500" />
                    <corners android:radius="@dimen/spacing_large" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>